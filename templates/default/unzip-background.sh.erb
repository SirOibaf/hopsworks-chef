set -e

help() {
  echo "usage: $0 localWorkdir srcFileInHdfs HDFS_USER"
  exit 1
}


if [ $# -ne 3 ] ; then
  help
fi

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"


filename="$(basename "$2")"

cd $1
freespace=`df $PWD | awk '/[0-9]%/{print $(NF-2)}'`
freespace=$(($freespace * 1000))

filesize=`<%= node['hops']['base_dir'] %>/bin/hdfs dfs -du -s $hdfsFile | awk  '{print $1}'`
# Amount of space needed to download and decompress the file.
# Guess that we need at least the file size + 1X file size after decompression.
filesize=$(($filesize * 2))

if [ $filesize -gt $freespace ] ; then
  echo "Not enough free space on the local harddisk"
  exit 2
fi


nohup ${DIR}/unzip-hdfs-files.sh $1 "$2" $3 > "$1/$filename".log &

